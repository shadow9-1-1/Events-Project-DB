@page
@model Events_Project_DB.Pages.bookhistoryModel
@{
    ViewData["Title"] = "Book History";
}

<br />
<br />
<br />
<br />
<div class="text-center">
    <h1 class="display-4">Booking History for: @Model.Username1!</h1>
    <p class="text-lg-start fs-3">Total Booked ticked: @Model.Table.Rows.Count</p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Event Name</th>
                <th scope="col">Start Date</th>
                <th scope="col">Time</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < @Model.Table.Rows.Count; i++)
            {
                <tr>

                    <th scope="row">@(i + 1)</th>
                    <td>@Model.Table.Rows[i][1]</td>
                    <td>@Model.Table.Rows[i][2]</td>
                    <td>@Model.Table.Rows[i][3]</td>
                    <td>@Model.Table.Rows[i][4]</td>
                    @* @for (int j = 0; j < Model.Table.Columns.Count; j++)
                {
                <td>@Model.Table.Rows[i][j]</td>
                } *@
                </tr>
            }
        </tbody>
    </table>

</div>

